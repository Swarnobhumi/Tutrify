<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/eye"
        android:backgroundTint="#04385F">

 <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/userProfilePic"
     android:layout_width="60dp"
     android:layout_height="60dp"
     app:civ_border_width="2dp"
     app:civ_border_color="@color/statusBg"
     android:src="@drawable/python_logo"
     android:layout_margin="10dp"
     android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:fontFamily="@font/londrina_solid"
            android:text="Welcome, \nSoumyabrata Mukharjee"
            android:textSize="18dp" />

            <TextView
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:id="@+id/userEmail"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_contact_mail_24"
                android:drawablePadding="5dp"
                android:text="test@gmail.com"
                android:textSize="15dp" />


        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:lottie_rawRes="@raw/robot_lottie"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </LinearLayout>

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:mwhStartColor="#04385F"
        app:mwhCloseColor="#04385F"
        app:mwhColorAlpha="1"
        app:mwhVelocity="5"
        app:mwhWaveHeight="15dp"/>

</LinearLayout>